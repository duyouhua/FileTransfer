<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hyman="http://schemas.android.com/apk/res/com.wechat.filetransfer"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bin.filetransfer.MainActivity" >

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/content_bg"
        android:orientation="horizontal" >

        <com.wechat.filetransfer.activity.ChangeColorIconWithText
            android:id="@+id/send"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp"
            hyman:icon="@drawable/ic_menu_start_conversation"
            hyman:text="发送"
            hyman:text_size="12sp"
            hyman:color="#ff45c01a" />

        <com.wechat.filetransfer.activity.ChangeColorIconWithText
            android:id="@+id/load"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp"
            hyman:icon="@drawable/ic_menu_friendslist"
            hyman:text="接收"
            hyman:text_size="12sp"
            hyman:color="#ff45c01a" />
        
        <com.wechat.filetransfer.activity.ChangeColorIconWithText
            android:id="@+id/blueTooth"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp"
            hyman:icon="@drawable/ic_menu_send"
            hyman:text="蓝牙"
            hyman:text_size="12sp"
            hyman:color="#ff45c01a" />
        

    </LinearLayout>

</LinearLayout>